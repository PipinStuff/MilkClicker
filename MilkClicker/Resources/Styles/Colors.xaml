<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#2E7D32</Color>
    <Color x:Key="Secondary">#66BB6A</Color>
    <Color x:Key="Tertiary">#81C784</Color>

    <Color x:Key="PrimaryText">#212121</Color>
    <Color x:Key="SecondaryText">#757575</Color>

    <Color x:Key="PageBackgroundColor">#F5F5F5</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>

    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Error">#F44336</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#E0E0E0</Color>
    <Color x:Key="Gray200">#BDBDBD</Color>
    <Color x:Key="Gray300">#9E9E9E</Color>
    <Color x:Key="Gray400">#757575</Color>
    <Color x:Key="Gray500">#616161</Color>
    <Color x:Key="Gray600">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

</ResourceDictionary>
